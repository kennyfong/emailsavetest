@{
    ViewData["Title"] = "Home Page";
}
@model CCADocument

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            @using (Html.BeginForm("Preview", "Home", FormMethod.Post))
            {
                <button Text="Generate Email" value="Preview">Generate Email</button>
            }
        </div>
        @if (Model != null)
        {
        <div class="col-sm-4">
            <p>@Model.PDFLocation</p>
        </div>
        <div class="col-sm-4">
            <p>@Model.EmailLocation</p>
        </div>
        }
    </div>
</div>
